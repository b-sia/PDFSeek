# OpenAI Configuration
OPENAI_API_KEY="your-api-key-here"
ALLOWED_ORIGINS=["http://localhost:5173"]

# Server Configuration
HOST="0.0.0.0"
PORT=8000
DEBUG=true

# Model Configuration
DEFAULT_MODEL="gpt-3.5-turbo"
LOCAL_MODEL_PATH="models/"
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_P=0.95
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0
REPEAT_PENALTY=1.1

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_DOCS=10
SIMILARITY_TOP_K=4

# GPU Configuration
GPU_LAYERS=-1  # -1 for CPU only, 0+ for number of layers to offload to GPU

# Security
JWT_SECRET="your-secret-key-here"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30